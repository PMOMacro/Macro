IsColorClose(color1, color2, tolerance := 20) {
    r1 := (color1 >> 16) & 0xFF
    g1 := (color1 >> 8) & 0xFF
    b1 := color1 & 0xFF
    r2 := (color2 >> 16) & 0xFF
    g2 := (color2 >> 8) & 0xFF
    b2 := color2 & 0xFF
    return (Abs(r1 - r2) <= tolerance)
        && (Abs(g1 - g2) <= tolerance)
        && (Abs(b1 - b2) <= tolerance)
}

IsBarFill() {
