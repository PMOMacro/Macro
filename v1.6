SendDiscordWebhook(message, title := "Prospect Macro Alert", color := 16711808, fields := "", footer := "Prospect V1.6 | Developed by Nicke and Timzzz") {
    global settingsFile
    webhookUrl := IniRead(settingsFile, "Discord", "webhook", "")
